{
  "compilerOptions": {
    "outDir": "../.tscout",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es6",
      "es2015",
      "dom"
    ],
    "experimentalDecorators": true,
    "declaration": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "angularCompilerOptions": {
    "genDir": "../.tscout",
    "skipTemplateCodegen": true
  }
}